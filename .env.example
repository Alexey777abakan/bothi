# Токен Telegram бота (получается через @BotFather)
TELEGRAM_TOKEN=your_telegram_bot_token_here

# ID чата или канала, куда будут отправляться сообщения
TELEGRAM_CHAT_ID=your_chat_id_here

# Режим запуска (если установлен в "test", то будет одна публикация)
# Если не указано, бот будет работать по расписанию
# RUN_MODE=test

# Интервал между публикациями в часах (по умолчанию 6 часов)
POST_INTERVAL_HOURS=6

# API ключи (замените на свои значения)
OPENROUTER_API_KEY=your_openrouter_api_key_here
FLUX_API_KEY=your_falai_flux_api_key_here 